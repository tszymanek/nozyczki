{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block form_widget_compound %}
    {% for child in form %}
        {% for kiddy in child %}
<div class="form-group">
    <div class="input-group input-group-hg">
        <span class="input-group-addon">‚úÅ.ws/</span>
        {{ form_widget(kiddy, { 'attr': {'class': 'input-hg'}}) }}
    </div>
</div>
        {% endfor %}
    {% endfor %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="login-screen">
                <div class="login-icon" style="top: 125px; left: 250px;">
                    {% image '@NozyczkiShortenerBundle/Resources/public/img/icons/png/Scissors.png' %}
                    <img src="{{ asset_url }}" alt="Scissors Url Shortener" />
                    {% endimage %}
                    <h4 style="color: #fff">
                        Scissors
                        <small>Url Shortener</small>
                    </h4>
                </div>
                <div class="login-form">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.uri, { 'attr': {'class': 'input-hg has-feedback'}}) }}
                    <span class="form-control-feedback fui-link"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-hg btn-embossed btn-inverse dropdown-toggle dropup" type="button" data-toggle="collapse" data-target="#collapseOptions" aria-expanded="false" aria-controls="collapseExample">
                        <span class="fui-gear"></span>
                        <span class="caret"></span>
                    </button>
                </div>
                <div class="collapse" id="collapseOptions">
                        {{ form_widget(form.aliases) }}
                </div>
                <button class="btn btn-embossed btn-danger btn-hg btn-block" type="submit">Shorten!</button>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
